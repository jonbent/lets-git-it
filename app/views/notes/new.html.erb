<article class="xviews xnotes xnew">
  <h1>Create New Ah Ha</h1>
  <div class='notes-container'>
    <%= form_for [@scoreboard, @note] do |f| %>
      <%= f.label :title %>:
      <%= f.text_field :title %><br>
      <%= f.label :body %>:
      <%= f.text_field :body %><br>
      <%= f.hidden_field :note_type, value: 'a' %><br>
      <%= f.hidden_field :scoreboard_id, value: "#{@scoreboard.id}" %><br>
      <%= f.submit %>
    <% end %>
  </div>
